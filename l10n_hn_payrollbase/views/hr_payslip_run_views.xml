<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_payslip_employees_form_inherit" model="ir.ui.view">
            <field name="name">hr.payslip.employees.form.inherit</field>
            <field name="model">hr.payslip.employees</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_by_employees"/>
            <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='structure_id']" position="after">
                    <newline/>
                    <field name="division_id"/>
                </xpath>

            </data>
            </field>
        </record>

        <record id="view_hr_payslip_tree" model="ir.ui.view">
            <field name="name">hr.payslip.inherit.tree</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_tree" />
            <field name="arch" type="xml">
                <field name="employee_id" position="before">
                        <field name="division_id" />
                </field>
            </field>
        </record>





    </data>
</odoo>