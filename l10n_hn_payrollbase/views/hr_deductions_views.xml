<odoo>
    <data>
        <record model="ir.ui.view" id="hr_deductions_view_list">
            <field name="name">hr.deductions.list</field>
            <field name="model">hr.deductions</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee_id"/>
                    <field name="contract_id"/>
                    <field name="name"/>
                    <field name="datede"/>
                    <field name="type_id"/>
                    <field name="montode"/>
                    <field name="have_porc"/>
                    <field name="porc_de"/>
                    <field name="amount"/>
                </tree>
            </field>
        </record>

        <record id="hr_deductions_view_form" model="ir.ui.view">
            <field name="name">hr.deductions.view.form</field>
            <field name="model">hr.deductions</field>
            <field name="arch" type="xml">
                <form string="hr_deductions_form">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="contract_id"/>
                                <field name="name"/>
                                <field name="datede"/>
                                <field name="type_id"/>
                                <field name="montode"/>
                                <field name="have_porc" />
                                <field name="porc_de"  attrs="{'invisible': [('have_porc', '=', False)]}"/>
                                <field name="amount"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="hr_deductions_view_pivot">
            <field name="name">hr.deductions.pivot</field>
            <field name="model">hr.deductions</field>
            <field name="arch" type="xml">
                <pivot string="Registro Deducciones">
                    <field name="datede" type="row"/>
                    <field name="employee_id" type="row"/>
                    <field name="amount" type="measure"/>
                </pivot>
            </field>
        </record>


            <!-- actions opening views on models -->
    <record id="action_view_hr_deductions_menu" model="ir.actions.act_window">
        <field name="name">Registro Deducciones</field>
        <field name="res_model">hr.deductions</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- menu categories -->

      <menuitem
        id="menu_hr_deductions_view"
        action="action_view_hr_deductions_menu"
        parent="l10n_hn_payrollbase.menu_records"
        name="Registro Deducciones"
        />




    </data>
</odoo>